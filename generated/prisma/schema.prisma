// schema.prisma
datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model CfgMarcas {
  id       Int     @id @default(autoincrement())
  marca    String
  keywords String? // tinytext
  foto     String? // tinytext
  activo   Boolean @default(true)

  Producto Productos[]

  @@map("cfgmarcas")
}

model CfgRubros {
  id          Int     @id @default(autoincrement())
  rubro       String
  condiciones String?
  keywords    String?
  foto        String?
  activo      Boolean @default(true)

  Producto Productos[]

  @@map("cfgrubros")
}

model CfgFormasPagos {
  id             Int     @id @default(autoincrement())
  forma_pago     String
  descripcion    String
  permite_cuotas Boolean @default(false)
  activo         Boolean @default(true)

  @@map("cfgformaspagos")
}

model CfgMonedas {
  id         Int     @id @default(autoincrement())
  moneda     String
  moneda_des String
  activo     Boolean @default(true)

  Producto Productos[]

  @@map("cfgmonedas")
}

model CfgSlider {
  id     Int     @id @default(autoincrement())
  titulo String
  thumbs String? // tinytext
  foto   String?
  orden  Int     @default(5)
  activo Boolean @default(true)

  @@map("cfgslider")
}

// Nueva tabla para estados de pedidos
model CfgEstadoPedido {
  id          String  @id @map("estado") // 'pendiente', 'approved', etc.
  descripcion String
  color       String? // clases de tailwind o hex
  orden       Int     @default(0)
  es_final    Boolean @default(false)
  es_cancel   Boolean @default(false)
  activo      Boolean @default(true)

  Pedidos Pedidos[]

  @@map("cfgestadopedidos")
}

model Productos {
  id          Int     @id @default(autoincrement())
  marca_id    Int
  rubro_id    Int
  moneda_id   Int
  producto    String
  descripcion String?
  foto        String?
  precio      Decimal @db.Decimal(10, 2)
  stock       Int     @default(0)
  destacado   Boolean @default(false)
  activo      Boolean @default(true)
  visitas     Int     @default(0)

  marca            CfgMarcas                  @relation(fields: [marca_id], references: [id])
  rubro            CfgRubros                  @relation(fields: [rubro_id], references: [id])
  moneda           CfgMonedas                 @relation(fields: [moneda_id], references: [id])
  fotos            ProductoFotos[]
  versiones        ProductoVersiones[]
  especificaciones ProductoEspecificaciones[]

  @@index([marca_id])
  @@index([rubro_id])
  @@index([destacado]) // Para slider/home
  @@index([activo, stock]) // Para listados de stock
  @@index([producto]) // Búsqueda exacta rápida
  @@map("productos")
}

model ProductoFotos {
  id          Int     @id @default(autoincrement())
  producto_id Int
  epigrafe    String
  foto        String?
  orden       Int     @default(1)
  activo      Boolean @default(true)

  producto Productos @relation(fields: [producto_id], references: [id])

  @@map("productofotos")
}

model ProductoVersiones {
  id          Int     @id @default(autoincrement())
  producto_id Int
  version     String
  detalle     String? // null → ''
  orden       Int     @default(5)
  activo      Boolean @default(true)

  producto Productos @relation(fields: [producto_id], references: [id])

  @@map("productoversiones")
}

model ProductoEspecificaciones {
  id               Int     @id @default(autoincrement())
  producto_id      Int
  categoria        String
  especificaciones String
  orden            Int     @default(1)
  activo           Boolean @default(true)

  producto Productos @relation(fields: [producto_id], references: [id])

  @@map("productoespecificaciones")
}

model Pedidos {
  id                     Int      @id @default(autoincrement())
  datos                  Json
  total                  Decimal  @db.Decimal(10, 2)
  estado                 String   @default("pendiente")
  metodo_pago            String
  comprador_nombre       String
  comprador_email        String
  comprador_telefono     String?
  direccion_envio        String?
  mp_payment_id          String?
  transferencia_ref      String?
  tarjeta_last4          String?
  tarjeta_payment_method String?
  mp_error_code          String?  @db.VarChar(64)
  mp_error_message       String?  @db.Text
  mp_response            Json?
  createdAt              DateTime @default(now()) @db.DateTime(3)
  updatedAt              DateTime @updatedAt @db.DateTime(3)

  estadoRel CfgEstadoPedido? @relation(fields: [estado], references: [id])

  @@index([estado])
  @@map("pedidos")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  entity    String   @db.VarChar(100) // Tabla afectada
  entityId  String   @db.VarChar(100) // ID del registro
  action    String   @db.VarChar(20) // "CREATE", "UPDATE", "DELETE"
  field     String?  @db.VarChar(100) // Campo afectado
  oldValue  String?  @db.Text
  newValue  String?  @db.Text
  user      String? // Email o ID
  ip        String? // IP
  createdAt DateTime @default(now())

  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String   @db.Text // VARCHAR(191) es demasiado corto
  expiresAt DateTime

  @@map("session") // (opcional) usa plural si quieres
}
